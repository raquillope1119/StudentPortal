@{
    ViewData["Title"] = "Add Course";
}

@model StudentPortal.Web.Models.AddCourseViewModel

<h1>Add Course</h1>


<form method="post">
    <div class="mt-3">
        <label class="form-label">Title</label>
        <input type="text" class="form-control" asp-for="Title" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label class="form-label">Credits</label>
        <input type="number" class="form-control" asp-for="Credits" />
        <span asp-validation-for="Credits" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <button class="btn btn-primary">Submit</button>
        <a type="submit" class="btn btn-secondary" asp-action="List">Cancel</a>
    </div>
</form>